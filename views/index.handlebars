<div class="container">
    <div class="jumbotron">
        <h1 class="display-4">Devour Da Burger</h1>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <ul>
                    {{#each burgers}}
                        {{#unless devoured}}
                            {{> buttons/burger-block devoured=true}}
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                </div>
                <div class="panel-body" id="entrySection">
                    <form>
                        <div class="form-group row mx-4">
                            <label for="burgerNameInput" class="col-sm-4 col-form-label"><h3>Make Me a Burger</h3></label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control form-control-lg" id="burgerNameInput" placeholder="What kind of burger do you want to eat?">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-auto">
                                <button type="submit" class="btn btn-secondary" id="addBurger">Make it!</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

